  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.10.3",
    "@babel/preset-env": "^7.10.3",
    "@inc2734/add-custom-event": "^0.5.0",
    "@wordpress/browserslist-config": "^2.6.0",
    "autoprefixer": "^9.8.2",
    "babel-loader": "^8.1.0",
    "cpy-cli": "^3.1.1",
    "cssnano": "^4.1.10",
    "js-cookie": "^2.2.1",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.1",
    "rimraf": "^3.0.2",
    "sass-basis": "^11.0.1",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12"
  },
  "scripts": {
    "clean:css": "rimraf dist/css && mkdir -p dist/css",
    "clean:js": "rimraf dist/js && mkdir -p dist/js",
    "clean:zip": "rimraf snow-monkey-footer-cta.zip",
    "css:app:sass": "node-sass src/css/app.scss -o dist/css",
    "css:app:postcss": "postcss dist/css/app.css -o dist/css/app.min.css -c=postcss.config.js",
    "css:app": "npm-run-all -s css:app:*",
    "css:php": "cpy '**/*.php' '../../dist/css' --cwd=src/css --parents",
    "css": "npm run clean:css && npm-run-all -p css:*",
    "js:app": "webpack src/js/app.js -o dist/js/app.min.js --config webpack.config.js",
    "js": "npm run clean:js && npm-run-all -p js:*",
    "build": "npm-run-all -p css js",
    "zip:pack": "rsync -a --exclude='/vendor' --exclude='/node_modules' --exclude='.*' --exclude='*.config.js' --exclude='*.xml.dist' --exclude='*.ruleset.xml' --exclude='/bin' --exclude='/tests' --exclude='package*.json' . snow-monkey-footer-cta && cd snow-monkey-footer-cta && composer install --no-dev",
    "zip:archive": "zip -9 -qmr snow-monkey-footer-cta.zip snow-monkey-footer-cta",
    "zip": "npm run clean:zip && npm run zip:pack && npm run zip:archive"
  }
}
