{
  "author": "inc2734",
  "license": "GPL-2.0+",
  "dependencies": {},
  "devDependencies": {
    "@inc2734/add-custom-event": "^0.5.0",
    "@wordpress/browserslist-config": "^4.0.1",
    "@wordpress/env": "^4.0.5",
    "@wordpress/scripts": "16.1.2",
    "autoprefixer": "^10.2.6",
    "cpy-cli": "^3.1.1",
    "cssnano": "^5.0.6",
    "js-cookie": "^2.2.1",
    "node-sass": "^6.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.4",
    "postcss-cli": "^8.3.1",
    "rimraf": "^3.0.2",
    "sass-basis": "^14.0.0"
  },
  "scripts": {
    "export:wp-content:themes": "npm run cli 'cp -r wp-content/themes .export/wp-content'",
    "export:wp-content:uploads": "npm run cli 'cp -r wp-content/uploads .export/wp-content'",
    "export:wp-content": "npm run cli 'rm -rf .export/wp-content' && mkdir -p .export/wp-content/uploads && run-p export:wp-content:*",
    "export:db": "mkdir -p .export/sql && npm run wp 'db export .export/sql/local.sql'",
    "export": "run-p export:*",
    "wp-env": "wp-env",
    "start": "wp-env start && open http://localhost:8888",
    "stop": "npm run export && wp-env stop",
    "cli": "wp-env run cli",
    "wp": "wp-env run cli wp",
    "pretest": "wp-env start && wp-env run composer 'install --no-interaction'",
    "test:lint:php": "wp-env run composer run-script lint",
    "test:lint": "run-s test:lint:*",
    "test:unit:php": "wp-env run composer run-script install-theme && wp-env run phpunit 'phpunit -c /var/www/html/wp-content/plugins/snow-monkey-footer-cta/.phpunit.xml.dist --verbose'",
    "test:unit": "run-s test:unit:*",
    "test": "run-s test:*",
    "clean:css": "rimraf dist/css && mkdir -p dist/css",
    "clean:js": "rimraf dist/js && mkdir -p dist/js",
    "clean:zip": "rimraf snow-monkey-footer-cta.zip",
    "css:app:sass": "node-sass src/css/app.scss -o dist/css",
    "css:app:postcss": "postcss dist/css/app.css -o dist/css/app.min.css -c=postcss.config.js",
    "css:app": "npm-run-all -s css:app:*",
    "css:php": "cpy '**/*.php' '../../dist/css' --cwd=src/css --parents",
    "css": "npm run clean:css && npm-run-all -p css:*",
    "js:app": "wp-scripts build src/js/app.js --output-path=dist/js",
    "js": "npm run clean:js && npm-run-all -p js:*",
    "build": "npm-run-all -p css js",
    "zip:pack": "rsync -a --exclude='/vendor' --exclude='/node_modules' --exclude='.*' --exclude='*.config.js' --exclude='*.xml.dist' --exclude='*.ruleset.xml' --exclude='/tests' --exclude='package*.json' . snow-monkey-footer-cta && cd snow-monkey-footer-cta && composer install --no-dev",
    "zip:archive": "zip -9 -qmr snow-monkey-footer-cta.zip snow-monkey-footer-cta",
    "zip": "npm run clean:zip && npm run zip:pack && npm run zip:archive"
  }
}
